<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BlankActivity"
        android:weightSum="1"
        android:orientation="vertical"
        android:scrollbars="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="text"
            android:hint="請輸入任意字串..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="提示測試"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toast測試"
            android:onClick="showToast"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="狀態列提示"
            android:layout_gravity="center_horizontal"
            android:onClick="showNotify"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SharedPreferences"/>

            <TableRow>
                <Button
                    android:layout_height="wrap_content"
                    android:text="測試寫入"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:onClick="writeSharedPreferences"/>
                <Button
                    android:layout_height="wrap_content"
                    android:text="測試讀取"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:onClick="readSharedPreferences"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="檔案"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="測試寫入檔案"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Layout 測試"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linear Layout 測試"
            android:onClick="showLinear"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Layout 測試"
            android:layout_gravity="center_horizontal"
            android:onClick="showTable" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relative Layout 測試"
            android:layout_gravity="center_horizontal"
            android:onClick="showRelative" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fragment 測試(靜態)"
            android:layout_gravity="center_horizontal"
            android:onClick="showFragment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="元件測試"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image 測試"
            android:layout_gravity="center_horizontal"
            android:onClick="showImage"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView 測試"
                android:onClick="showListView"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView 測試(圖示)"
                android:onClick="showListViewIcon"/>
        </TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="框線測試"
            android:onClick="showFrameBorder"/>
    </LinearLayout>
</ScrollView>